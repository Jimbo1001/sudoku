
class ConwaysGameOfLife{
    private int len;
    String[][] board;
    ConwaysGameOfLife(){
        board = new String[len][len];
        for (int r = 0; r < len; r++){
            for (int c = 0; c < len; c++){
                if (r == 0 || c == 0 || r == len -1 || c == len -1){
                    board[r][c] = "#";
                } else {
                    board[r][c] = ".";
                }
            }
        }
    }
}